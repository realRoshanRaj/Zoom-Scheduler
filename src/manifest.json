{
  "manifest_version": 2,
  "name": "Zoom Scheduler",
  "description": "Helps you organize your Zoom Meetings or Zoom Classes",
  "default_locale": "en",
  "author": "Roshan R",
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "permissions": ["activeTab"],
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Zoom Scheduler",
    "default_icon": {
      "19": "icons/19.png",
      "38": "icons/38.png"
    }
  }
}
